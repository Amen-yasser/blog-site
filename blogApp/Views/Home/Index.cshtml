@model List<news>
@{
    ViewBag.Title = "Home Page";
}
@section styles
{
    <link href="~/Content/home.css" rel="stylesheet" />
}
<div id="myslide" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myslide" data-slide-to="0" class="active"></li>
        <li data-target="#myslide" data-slide-to="1"></li>
        <li data-target="#myslide" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        <div class="item active">
            <div class="overlay"></div>
            <img src="~/Content/imageForDesign/pexels-madison-inouye-1577882.jpg" />
            <div class="carousel-caption hidden-xs">
                <h1>with<strong>"Blog App"</strong>Post Your Posts</h1>
                <a class="btn btn-primary" href="#">Get info</a>
            </div>
        </div>
        <div class="item">
            <div class="overlay"></div>

            <img src="~/Content/imageForDesign/pexels-pixabay-235922.jpg" />
            <div class="carousel-caption hidden-xs">
                <h1>with <strong>"Blog App"</strong> Post Your Posts</h1>
                <a class="btn btn-primary" href="#">Get info</a>
            </div>
        </div>
        <div class="item">
            <div class="overlay"></div>

            <img src="~/Content/imageForDesign/pexels-suzy-hazelwood-5010877.jpg" />
            <div class="carousel-caption hidden-xs">
                <h1>with <strong>"Blog App"</strong>Post Your Posts</h1>
                <a class="btn btn-primary" href="#">Get info</a>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myslide" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myslide" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="news">
    <div class="container ">
        <h1 class="page-header text-center ">Our News</h1>
        <div class="home_news ">
            @foreach (var i in Model)
            {
                <div class="home-card ">
                    <div class="photo">
                        <img src="~/Attach/imageNews/@i.photo" />
                    </div>

                    <div class="info">
                        <h3 class="card-title">@i.title</h3>
                        <hr />
                        <p class="lead">@i.bref</p><br />
                        <a href="/news/details/@i.id" class="btn btn-primary">Read More...</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<div class="readAboutUs">
    <div class="overlay">
        <div class="container">
            <div class="body">
                <h2>
                    Wellcome to our Blog App Posts...<br />
                    To Read More About US<br /> CLICK HERE
                </h2>
                <a href="/Home/About/">About Us</a>
            </div>
        </div>
    </div>
</div>

