@model news
@{
    ViewBag.Title = "update";
}
@section styles
{

    <link href="~/Content/register.css" rel="stylesheet" />
}

<div class="UpdateNews">
    <div class="container">
        <h1 class="page-header">Update News</h1>
        <form method="post" enctype="multipart/form-data">
            @Html.HiddenFor(n=>n.id)
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-3">
                    @Html.LabelFor(n => n.title)
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(n => n.title, new { @class = "form-control"})
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.title, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-3">
                    @Html.LabelFor(n => n.bref)
                </div>
                <div class="col-md-3">
                    @Html.TextAreaFor(n => n.bref, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.bref, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-3">
                    @Html.LabelFor(n => n.desc)
                </div>
                <div class="col-md-3">
                    @Html.TextAreaFor(n => n.desc, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.desc, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-3">
                    @Html.LabelFor(n => n.photo)
                </div>
                <div class="col-md-3">
                    <input type="file" name="img" class="form-control" />
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.photo, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-3">
                    @Html.LabelFor(n => n.catId)
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(n => n.catId, (SelectList)ViewBag.catalogs, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.catId, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">

                <div class="col-md-6">

                </div>
                <div class="col-md-3">
                    <input type="submit" value="Post" class="btn btn-primary btnUpdate" />
                </div>
                <div class="col-md-3">
                    <img class="img-responsive" src="~/Attach/imageNews/@Model.photo" width="100"/>
                </div>
            </div>
        </form>
    </div>
</div>


